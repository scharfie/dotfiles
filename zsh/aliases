KERNEL=`uname -s`

# general
alias sshkey='cat ~/.ssh/id_rsa.pub | pbcopy && echo Public key copied to clipboard.'
alias cls='clear'

# directories
alias back='cd - > /tmp/nul'
alias ..='cd ..'
alias .2='cd ../..'
alias .3='cd ../../..'
alias .4='cd ../../../..'

if [[ "$KERNEL" == "Linux" ]]; then
  alias dir='ls -al --color'
  alias guivim='gvim'

  # simulate OS X commands
  alias open="gnome-open"
  alias pbcopy='xclip -selection clipboard'
  alias pbpaste='xclip -selection clipboard -o'
else
  alias dir='ls -GlAh'
  alias guivim='mvim'
  alias gx='gitx --all'
fi

function et() {
  if [ "$1" != "" ]; then
    guivim -c "$1"
  else
    guivim
  fi
}

alias jira="~/dotfiles/scripts/jira.rb"

# git-svn
alias svnpull='git-svn rebase'
alias svnpush='git-svn dcommit'

# git
alias pull='git pull'
alias push='git push'
alias gco='git checkout'
alias gcm='git commit -a -m'
alias gb='git branch'
alias gadd='git add'
alias giff='git diff'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias stash='git stash'
alias gitlog='git log --pretty=format:"%Cblue%h%Creset %Cred%ad%Creset %Cgreen%an%Creset %s"'
alias gcp='git cherry-pick'
alias sta='git branch; git status'
alias ta='sta'

# capistrano
alias pending='cap production deploy:pending'

# rails
alias ss="if [[ -x script/server ]]; then script/server; else script/rails server; fi"
alias sc="if [[ -x script/console ]]; then script/console; else script/rails console; fi"
alias sg="if [[ -x script/generate ]]; then script/generate; else script/rails generate; fi"
alias sgm='sg migration'
alias sgc='sg controller'
alias sr='script/runner'
alias tlog='tail -f log/development.log'
alias migrate='rake db:migrate db:test:clone'
alias rst='touch tmp/restart.txt'

# timetracking with getharvest.com
alias harvest='open https://igicom.harvestapp.com/daily'

# server
alias reloadapache='sudo httpd -k graceful'
alias ehttpdmain='mate_wait /Applications/xampp/etc/httpd.conf && reloadapache'
alias ehttpd='mate_wait ~/Sites/httpd.conf && reloadapache'
alias ehosts='sudo vim /etc/hosts'

alias mysqlstart='sudo /opt/local/bin/mysqld_safe5 &'
alias mysqlstop='/opt/local/bin/mysqladmin5 -u root -p shutdown'

alias sprof='source ~/.zshrc'
alias eprof='mate ~/dotfiles'
