[user]
  name  = Chris Scharf
  email = scharfie@gmail.com

[alias]
  co = checkout
  sta = status
  amend = commit --amend
  unadd = update-index --force-remove
  serve = !git daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
  rb    = "!f() { git push origin master:$1 && git checkout -t origin/$1; }; f"

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto

[core]
  excludesfile = ~/.gitignore
  editor = vi 
  pager = cat

[apply]
	whitespace = nowarn

[mirror]
  summary = true
  
[github]
	user = scharfie

[format]
  pretty = oneline
[push]
	default = tracking
