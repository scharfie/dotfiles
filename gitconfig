[user]
  name  = Chris Scharf
  email = scharfie@gmail.com

[alias]
  co = checkout
  sta = status
  amend = commit --amend
  unadd = update-index --force-remove
  rb    = "!f() { git push origin master:$1 && git checkout -t origin/$1; }; f"
  servethis = !git daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
  serve     = !git daemon --reuseaddr --verbose --enable=receive-pack --base-path=. --export-all

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto

[core]
  excludesfile = ~/.gitignore
  editor = vi 
  pager = cat
	quotepath = false

[apply]
	whitespace = nowarn

[mirror]
  summary = true
  
[github]
	user = scharfie

[format]
  pretty = oneline

[push]
	default = tracking
